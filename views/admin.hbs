<div class="container-fluid">
    <div class="row align-items-center">
        <div class="col-12">
            <div class="row d-flex justify-content-center">
                <div class="col-8 d-flex justify-content-center">
                    <div class="adminLine text-center">
                        <h3>
                            Bienvenido al area de administración
                        </h3>
                        <p>
                            Desde aquí podrás crear viajes o gestionar ya existentes
                        </p>

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Viajes</th>
                                    {{!--
                                    <th scope="col">Fechas</th> --}}
                                    <th scope="col">Descripción</th>
                                    <th scope="col">Imagen</th>
                                    <th scope="col">Precio</th>
                                    <th scope="col">Activado</th>
                                    <th scope="col">Eliminar</th>
                                </tr>
                            </thead>

                            <tbody>
                                {{#each data}}
                                <tr>
                                    <td scope="row">{{id}}</td>
                                    <td>{{travel}}</td>
                                    <td>{{description}}</td>
                                    <td>
                                        <img src="{{url}}" width="65px" height="65px">
                                    </td>
                                    <td>{{price}}$</td>
                                    <td>
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" {{#if active}} checked {{/if}}>
                                            </label>
                                        </div>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-danger btn-sm">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>

                        </table>
                        <form action="/add/travel" method="post">
                        <button class="btn btn-primary btn-lg text-uppercase describeButton">añadir
                        </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>